body{

background-image: url( https://c4.wallpaperflare.com/wallpaper/602/193/176/coffee-beige-minimalism-wallpaper-preview.jpg);
}
</style>

<% if flash[:errors] %>
    <ul>
        <% flash[:errors].each do |error| %>
            <li>
                <%= error %>
            </li>
        <% end %>
    </ul>
<% end %>

<h1>Sign Up</h1>
<div class="login">
<%= form_for @user do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %><br>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %><br>

    <%= f.label :username %>
    <%= f.text_field :username %><br>

    <%= f.label :password %>
    <%= f.password_field :password %><br>

    <%= f.submit "Create Account" %>
<% end %>
</div>

