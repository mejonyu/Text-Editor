<style>
  body{
    background-image: url('/assets/cloud_back.png');
    background-size:cover;
      
  }
</style>

<% if flash[:notices] %>
    <div class="isa_success">
        <i class="fa fa-check"></i>
        <% flash[:notices].each do |notice| %>
            <%= notice %>
        <% end %>
    </div>
<% end %>

<h1 style ="color:white;">Recently Updated Blogs</h1>

<div class="form">
    <% @blogs.sort{ |a,b| b.updated_at <=> a.updated_at }.each do |blog| %>
        <%= link_to blog.title, blog_path(blog) %> - <%= blog.created_or_edited %> <%= blog_edited_date_format(blog) %> by <%= blog.last_editor %><br>
    <% end %>
</div>