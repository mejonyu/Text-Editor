<style>
  body{
    background-image: url('/assets/lightbulb_back.png');
    background-size:cover;
      
  }
</style>

<h1>Edit Your Blog</h1>

<% if flash[:errors] %>
    <div class="isa_error">
        <% flash[:errors].each do |error| %>
            <i class="fa fa-times-circle"></i><%= error %>.<br>
        <% end %>
    </div>
<% end %>

<div class="form">
    <%= form_for @blog do |f| %>

        <%= f.label :title %>
        <%= f.text_field :title %>
        <br>

        <%= f.label :content %>
        <%= f.text_area :content, cols: 50, rows: 15 %>
        <br>

        <%= f.label :topic %>
        <%= f.select :topic, Blog.topics %>
        <br>

        <%= f.label :add_a_writer %>
        <%= f.text_field :add_a_writer %>
        <br>

        <%= f.submit %>
        
    <% end %>

    <%= button_to "Delete", blog_path(@blog), data: { confirm: "Are you sure?" }, method: "delete" %>

    <%= button_to "Cancel", blog_path(@blog), method: "get" %>
</div>