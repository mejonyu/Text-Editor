<h1>Create a Blog</h1>

<% if flash[:errors] %>
    <ul>
        <% flash[:errors].each do |error| %>
            <li>
                <%= error %>
            </li>
        <% end %>
    </ul>
<% end %>

<%= form_for @blog do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>

    <%= f.label :content %>
    <%= f.text_area :content, cols: 50, rows: 15 %>
    <br>

    <%= f.label :topic %>
    <%= f.select :topic, Blog.topics %>
    <br>

    <%= f.label :add_a_writer %>
    <%= f.text_field :add_a_writer %>
    <br>

    <%= f.submit %>
    
<% end %>

<%= button_to "Cancel", blogs_path, method: "get" %>
