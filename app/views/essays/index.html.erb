<style>
  body{
    background-image: url('/assets/cloud_back.png');
    background-size:cover;
      
  }
</style>

<% if flash[:notices] %>
    <div class="isa_success">
        <i class="fa fa-check"></i>
        <% flash[:notices].each do |notice| %>
            <%= notice %>
        <% end %>
    </div>
<% end %>

<h1 style ="color:white;">Recently Updated Essays</h1>

<div class="form">
    <% @essays.sort{ |a,b| b.updated_at <=> a.updated_at }.each do |essay| %>
        <%= link_to essay.title, essay_path(essay) %> - <%= essay.created_or_edited %> <%= essay_edited_date_format(essay) %> by <%= essay.last_editor %><br>
    <% end %>
</div>