<style>
    body{
        background-image: url('/assets/lightbulb_back.png');
        background-size: cover;
    }
</style>

<h1>Create an Essay</h1>

<% if flash[:errors] %>
    <div class="isa_error">
        <% flash[:errors].each do |error| %>
            <i class="fa fa-times-circle"></i><%= error %>.<br>
        <% end %>
    </div>
<% end %>

<div class="form">
    <%= form_for @essay do |f| %>
        
        <%= f.label :title %><br>
        <div class="textbox1">
        <%= f.text_field :title, placeholder:"title" %>
        
        </div>
       
        <%= f.label :content %><br>
        <div class="textbox1">
        <%= f.text_area :content, cols: 50, rows: 15, placeholder:"content" %>
        
        </div>
        
        <%= f.label :essay_type %><br>
        <div class="textbox1">
        <%= f.select :essay_type, Essay.types, placeholder:"types" %>
        <br>
        </div>
        <div class="textbox1">
        <%= f.label :add_a_writer %><br>
        <%= f.text_field :add_a_writer, placeholder:"Enter a username" %>
        </div>
        
        <br>
        <div>
       <div class="b1">
        <%= f.submit %>
       </div>
      
        
    <% end %>
    <section id ='b2'>
    <%= button_to "Cancel", essays_path, method: "get" %>
    
    </div>
    </div>
</div>