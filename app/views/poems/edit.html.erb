<style>
  body{
    background-image: url('/assets/lightbulb_back.png');
    background-size:cover;
      
  }
</style>

<h1>Edit Your Poem</h1>

<% if flash[:errors] %>
    <div class="isa_error">
        <% flash[:errors].each do |error| %>
            <i class="fa fa-times-circle"></i><%= error %>.<br>
        <% end %>
    </div>
<% end %>

<div class="form">
<%= form_for @poem do |f| %>

    <%= f.label :title %><br>
    <div class="textbox1">
    <%= f.text_field :title, placeholder:"title" %>
    
    </div>
   
    <%= f.label :content %><br>
    <div class="textbox1">
    <%= f.text_area :content, cols: 50, rows: 15, placeholder:"content" %>
    
    </div>
    
    <%= f.label :poem_type %><br>
    <div class="textbox1">
    <%= f.select :poem_type, Poem.types, placeholder:"types" %>
    <br>
    </div>
    <div class="textbox1">
    <%= f.label :add_a_writer %><br>
    <%= f.text_field :add_a_writer, placeholder:"Enter a username" %>
    </div>
    
    <br>

    <div class="b1">
    <%= f.submit %>
   </div>
    
<% end %>
<div class="b1">
<%= button_to "Delete", poem_path(@poem), data: { confirm: "Are you sure?" }, method: "delete" %>
    </div>
    <div class="b1">
<%= button_to "Cancel", poem_path(@poem), method: "get" %>
</div>
</div>